{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Highest ranked unis around the world",
    "projection": {"type": "equalEarth"},
    "layer": [
        {
            "data": {
                "url": "https://github.com/assignment22/datavis2/blob/main/ne_110m%20(1).json" ,
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black"}
        },
        {
            "data": {
                "url": "https://github.com/assignment22/datavis2/blob/main/World%20University%20Rankings%202023.csv"
            },
            "transform": [
                {"filter": "datum.Longitude !== null && datum.Latitude !== null"}
            ],
            "mark": {"type": "circle", "tooltip": {"content": "data"}},
            "encoding": {
                "longitude": {"field": "Longitude", "type": "quantitative"},
                "latitude": {"field": "Latitude", "type": "quantitative"},
                "size": {
                    "field": "University Rank",
                    "type": "quantitative",
                    "title": "Ranking",
                    "scale": {"domain": [1, 61]}
                    
                },
                "color": {
                    "field": "University Rank",
                    "type": "quantitative",
                    "title": "Ranking",
                    "scale": {"scheme": "reds"}
                }

        }
    }
],
"config": {}
}