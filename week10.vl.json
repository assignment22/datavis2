{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 600,
  "width": 700,
  "data": {
    "url": "https://raw.githubusercontent.com/assignment22/datavis2/main/World%20University%20Rankings%202023.csv"
  },
  "params": [
    {
    "name": "Country_selection",
    "bind": {
        "input": "select",
        "options": [
          null,
          "United States",
          "United Kingdom",
          "Australia",
          "South Korea",
          "Netherlands"
          ],
          "labels":[
            "Show All",
            "United States",
            "United Kingdom",
            "Australia",
            "South Korea",
            "Netherlands"
          ],
          "name": "Country Selection: "

    }
}
],
"transform": [
{"filter": "Country_selection == null || datum.Location == Country_selection"}
],
      "mark": "point",
      "encoding": {
        "y": {"field": "No_of_student_per_staff", "type": "quantitative"},
        "x": {"field": "Overall_score", "type": "quantitative"},
        "color": {
        "field": "University Rank",
        "type": "quantitative",
        "title": "University Rank",
        "scale": {"domain": [200, 1], "scheme": "oranges"},
        "legend": {"format": ".2s"},
        
        "mark": "text",
        "encoding": {
        "text": {"field": "University Rank", "type": "ordinal"},
        "color": {
          "condition": {"test": "datum['University Rank'] < 10", "value": "black"},
          "value": "green"
        
        }
      }
      },
    

      "tooltip": [
      {"field": "Name of University", "type": "nominal", "title":
      "Name of University"},
      {
        "field": "Location",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "University Rank",
        "type": "ordinal",
        "title": "Rank"
      }
      ]

}
}
